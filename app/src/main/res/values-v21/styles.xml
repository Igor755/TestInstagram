<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ViewLine" parent="Widget.AppCompat.Button.Colored">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/grey_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>


    <style name="ToolBarMainActivity" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="DuplicateDefinition">
        <item name="android:textColorSecondary">@color/black_text</item>
        <item name="android:background">@color/grey_light</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>